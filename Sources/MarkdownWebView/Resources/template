<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script>PLACEHOLDER_SCRIPT</script>
    <style>PLACEHOLDER_STYLESHEET</style>
</head>

<body>
    <div id="markdown-rendered"></div>
    <script>
        const markdownIt = window.markdownit({
            highlight: function (str, lang) {
                if (lang && hljs.getLanguage(lang)) {
                    try {
                        return hljs.highlight(str, { language: lang }).value;
                    } catch (__) { }
                }

                return ''; // use external default escaping
            },
            linkify: true,
        });
        const element = document.getElementById(`markdown-rendered`);
        const target = { markdownContent: `` };
        const handler = {
            set: function (target, prop, receiver) {
                target[prop] = receiver;
                element.innerHTML = markdownIt.render(receiver);
                return true;
            }
        };
        window.proxy = new Proxy(target, handler);
    </script>
</body>

</html>
